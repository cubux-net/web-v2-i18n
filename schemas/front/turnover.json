{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$defs": {
    "string": {
      "type": "string",
      "minLength": 1
    }
  },
  "type": "object",
  "properties": {
    "operation": {
      "type": "object",
      "properties": {
        "label": {
          "type": "object",
          "properties": {
            "Commission": {
              "$ref": "#/$defs/string"
            },
            "CommissionCategory": {
              "$ref": "#/$defs/string"
            },
            "CurrencyRate": {
              "$ref": "#/$defs/string"
            },
            "NeedConfirmation": {
              "$ref": "#/$defs/string"
            },
            "Project": {
              "$ref": "#/$defs/string"
            },
            "Repetition": {
              "$ref": "#/$defs/string"
            },
            "SelectAccount": {
              "$ref": "#/$defs/string"
            },
            "SelectCategory": {
              "$ref": "#/$defs/string"
            },
            "SelectDate": {
              "$ref": "#/$defs/string"
            }
          },
          "required": [
            "Commission",
            "CommissionCategory",
            "CurrencyRate",
            "NeedConfirmation",
            "Project",
            "Repetition",
            "SelectAccount",
            "SelectCategory",
            "SelectDate"
          ]
        },
        "message": {
          "type": "object",
          "properties": {
            "SelectDestinationAccount": {
              "$ref": "#/$defs/string"
            },
            "SelectSourceAccount": {
              "$ref": "#/$defs/string"
            },
            "TransferSameAccount": {
              "$ref": "#/$defs/string"
            }
          },
          "required": [
            "SelectDestinationAccount",
            "SelectSourceAccount",
            "TransferSameAccount"
          ]
        }
      },
      "required": ["label", "message"]
    },
    "page": {
      "type": "object",
      "properties": {
        "button": {
          "type": "object",
          "properties": {
            "AddCategory": {
              "$ref": "#/$defs/string"
            },
            "AddSubcategory": {
              "$ref": "#/$defs/string"
            }
          },
          "required": ["AddCategory", "AddSubcategory"]
        },
        "filter": {
          "type": "object",
          "properties": {
            "dateRange": {
              "type": "object",
              "properties": {
                "AllTime": {
                  "$ref": "#/$defs/string"
                },
                "ExactDays": {
                  "$ref": "#/$defs/string"
                },
                "Month": {
                  "$ref": "#/$defs/string"
                },
                "Year": {
                  "$ref": "#/$defs/string"
                }
              },
              "required": ["AllTime", "ExactDays", "Month", "Year"]
            }
          },
          "required": ["dateRange"]
        },
        "message": {
          "type": "object",
          "properties": {
            "CategoryNotFound": {
              "$ref": "#/$defs/string"
            }
          },
          "required": ["CategoryNotFound"]
        },
        "title": {
          "type": "object",
          "properties": {
            "Expenses": {
              "$ref": "#/$defs/string"
            },
            "ExpensesByCategories": {
              "$ref": "#/$defs/string"
            },
            "Incomes": {
              "$ref": "#/$defs/string"
            },
            "IncomesByCategories": {
              "$ref": "#/$defs/string"
            }
          },
          "required": [
            "Expenses",
            "ExpensesByCategories",
            "Incomes",
            "IncomesByCategories"
          ]
        }
      },
      "required": ["button", "filter", "message", "title"]
    }
  },
  "required": ["operation", "page"]
}
